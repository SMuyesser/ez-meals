{
  "name": "ez-meals",
  "version": "1.0.0",
  "description": "Mealplan generator based on daily nutrition goals",
  "main": "index.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SMuyesser/ez-meals.git"
  },
  "keywords": [
    "javascript",
    "react",
    "redux",
    "node",
    "express",
    "mongodb",
    "fitness",
    "health",
    "nutrition"
  ],
  "author": "Sinan Muyesser",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SMuyesser/ez-meals/issues"
  },
  "homepage": "https://github.com/SMuyesser/ez-meals#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9"
  }
}
